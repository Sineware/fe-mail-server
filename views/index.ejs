<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sineware FE Mail Server</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .email-list {
            max-height: 70vh;
            overflow-y: auto;
            border-right: 1px solid #dee2e6;
        }
        
        .email-item {
            transition: background-color 0.2s ease;
            cursor: pointer;
        }
        
        .email-item:hover {
            background-color: #f8f9fa;
        }
        
        .email-item.selected {
            background-color: #e9ecef;
        }
        
        .email-item.sent {
            background-color: #ffeaa7;
        }
        
        .email-item.sent.selected {
            background-color: #fdcb6e;
        }
        
        .email-content {
            min-height: 80vh;
        }
        
        .email-iframe {
            width: 100%;
            height: 600px;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
        }
        
        .search-container {
            position: sticky;
            top: 0;
            background: white;
            z-index: 100;
            border-bottom: 1px solid #dee2e6;
            padding: 15px;
        }
        
        .pagination-container {
            position: sticky;
            bottom: 0;
            background: white;
            border-top: 1px solid #dee2e6;
            padding: 10px 15px;
        }
        
        .loading {
            opacity: 0.6;
            pointer-events: none;
        }

        .search-stats {
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="<%- prefix %>/">
                üìß Sineware Mail
            </a>
            
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="refreshPage()">
                    üîÑ Refresh
                </button>
                <a class="btn btn-success btn-sm" href="<%- prefix %>/compose<%= search ? '?search=' + encodeURIComponent(search) : '' %>">
                    ‚úâÔ∏è Compose
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Email List -->
            <div class="col-md-4 col-lg-3 p-0">
                <!-- Search Bar -->
                <div class="search-container">
                    <form method="GET" action="<%- prefix %>/" class="d-flex gap-2">
                        <input type="search" 
                               class="form-control form-control-sm" 
                               name="search" 
                               placeholder="Search emails..." 
                               value="<%= search %>"
                               id="searchInput">
                        <button type="submit" class="btn btn-primary btn-sm">üîç</button>
                        <% if (search) { %>
                            <a href="<%- prefix %>/" class="btn btn-outline-secondary btn-sm">‚úï</a>
                        <% } %>
                    </form>
                    
                    <div class="search-stats mt-2">
                        <% if (search) { %>
                            <strong><%= totalEmails %></strong> results for "<%= search %>"
                        <% } else { %>
                            <strong><%= totalEmails %></strong> total emails
                        <% } %>
                        <span class="text-muted">
                            ‚Ä¢ Page <%= currentPage %> of <%= totalPages %>
                        </span>
                    </div>
                </div>

                <div class="email-list">
                    <div class="list-group list-group-flush">
                        <% if (emails.length === 0) { %>
                            <div class="list-group-item text-center text-muted py-4">
                                <% if (search) { %>
                                    <p class="mb-2">üîç No emails found</p>
                                    <small>Try a different search term</small>
                                <% } else { %>
                                    <p class="mb-0">üì≠ No emails found</p>
                                <% } %>
                            </div>
                        <% } else { %>
                            <% emails.forEach((email, index) => { %>
                                <% 
                                // Calculate the actual email ID for linking
                                const actualIndex = db.data ? db.data.emails.findIndex(e => 
                                    e.date === email.date && 
                                    e.subject === email.subject && 
                                    e.from.text === email.from.text
                                ) : index;
                                %>
                                <a href="<%- prefix %>/email/<%= actualIndex %>/<%= search || currentPage > 1 ? '?' + new URLSearchParams({search, page: currentPage}).toString() : '' %>" 
                                   class="list-group-item list-group-item-action email-item <%= selectedEmail == actualIndex ? 'selected' : '' %> <%= email.isFEMailReply ? 'sent' : '' %>"
                                   data-email-id="<%= actualIndex %>">
                                    
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <h6 class="mb-1 text-truncate">
                                            <%= email.isFEMailReply ? 'üì§' : 'üì•' %>
                                            <%= email.subject || '(No Subject)' %>
                                        </h6>
                                        <small class="text-muted">
                                            <%= new Date(email.date).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    
                                    <p class="mb-1 small">
                                        <strong>
                                            <%= email.isFEMailReply ? 'To:' : 'From:' %>
                                        </strong>
                                        <span class="text-truncate d-inline-block" style="max-width: 200px;">
                                            <%= email.isFEMailReply ? email.to.text : email.from.text %>
                                        </span>
                                    </p>
                                    
                                    <small class="text-muted">
                                        <%= new Date(email.date).toLocaleTimeString() %>
                                    </small>
                                </a>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="pagination-container">
                        <nav aria-label="Email pagination">
                            <ul class="pagination pagination-sm mb-0 justify-content-center">
                                <li class="page-item <%= !hasPrevPage ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%- prefix %>/?<%= new URLSearchParams({search, page: currentPage - 1}).toString() %>">
                                        ‚Äπ Prev
                                    </a>
                                </li>
                                
                                <% 
                                const startPage = Math.max(1, currentPage - 2);
                                const endPage = Math.min(totalPages, currentPage + 2);
                                %>
                                
                                <% if (startPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%- prefix %>/?<%= new URLSearchParams({search, page: 1}).toString() %>">1</a>
                                    </li>
                                    <% if (startPage > 2) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    <% } %>
                                <% } %>
                                
                                <% for (let i = startPage; i <= endPage; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="<%- prefix %>/?<%= new URLSearchParams({search, page: i}).toString() %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <% if (endPage < totalPages) { %>
                                    <% if (endPage < totalPages - 1) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    <% } %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%- prefix %>/?<%= new URLSearchParams({search, page: totalPages}).toString() %>">
                                            <%= totalPages %>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <li class="page-item <%= !hasNextPage ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%- prefix %>/?<%= new URLSearchParams({search, page: currentPage + 1}).toString() %>">
                                        Next ‚Ä∫
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                <% } %>
            </div>

            <!-- Email Content -->
            <div class="col-md-8 col-lg-9">
                <div class="email-content p-4">
                    <% if (!selectedEmail || selectedEmail === false) { %>
                        <div class="text-center text-muted py-5">
                            <h4>üìß Select an email to view</h4>
                            <p>Choose an email from the list to read its contents</p>
                            <% if (search) { %>
                                <small class="text-muted">Showing search results for "<%= search %>"</small>
                            <% } %>
                        </div>
                    <% } else { %>
                        <% 
                        const email = selectedEmailData || (selectedEmail === "compose" ? {
                            from: { text: "", value: [{ address: "" }] },
                            to: { text: "" },
                            cc: { text: "" },
                            html: "",
                            date: "",
                            subject: "",
                            isFEMailReply: false
                        } : emails[selectedEmail]);
                        %>
                        
                        <% if (selectedEmail !== "compose") { %>
                            <!-- Email Header -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h4 class="card-title mb-1">
                                                <%= email.subject || '(No Subject)' %>
                                            </h4>
                                            <div class="text-muted small">
                                                <div><strong>From:</strong> <%= email.from.text %></div>
                                                <div><strong>To:</strong> <%= email.to.text %></div>
                                                <% if (email.cc && email.cc.text) { %>
                                                    <div><strong>CC:</strong> <%= email.cc.text %></div>
                                                <% } %>
                                                <div><strong>Date:</strong> <%= new Date(email.date).toLocaleString() %></div>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="btn-group" role="group">
                                                <% if (!email.isFEMailReply) { %>
                                                    <a href="<%- prefix %>/email/<%= selectedEmail %>/reply<%= search || currentPage > 1 ? '?' + new URLSearchParams({search, page: currentPage}).toString() : '' %>" class="btn btn-primary btn-sm">
                                                        ‚Ü©Ô∏è Reply
                                                    </a>
                                                <% } %>
                                                <button class="btn btn-outline-secondary btn-sm" 
                                                        data-bs-toggle="collapse" 
                                                        data-bs-target="#rawEmailCollapse">
                                                    üîç Raw
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Email Content -->
                            <div class="card mb-4">
                                <div class="card-body p-0">
                                    <iframe src="<%- prefix %>/email/<%= selectedEmail %>/raw" 
                                            class="email-iframe"
                                            title="Email content"
                                            loading="lazy">
                                    </iframe>
                                </div>
                            </div>

                            <!-- Raw Email Collapse -->
                            <div class="collapse mb-4" id="rawEmailCollapse">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Raw Email Data</h6>
                                    </div>
                                    <div class="card-body">
                                        <textarea class="form-control" 
                                                  rows="10" 
                                                  readonly 
                                                  style="font-family: monospace; font-size: 0.875rem;"><%= email.raw || 'Raw data not available' %></textarea>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Reply/Compose Form -->
                        <% if (reply) { %>
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <%= selectedEmail === "compose" ? '‚úâÔ∏è Compose New Email' : '‚Ü©Ô∏è Reply to Email' %>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form id="composeForm" action="<%- prefix %>/compose" method="POST">
                                        <div class="mb-3">
                                            <label for="to" class="form-label">To *</label>
                                            <input type="email" 
                                                   class="form-control" 
                                                   id="to" 
                                                   name="to" 
                                                   value="<%= selectedEmail !== 'compose' && email.from.value && email.from.value[0] ? email.from.value[0].address : '' %>"
                                                   required
                                                   multiple>
                                            <div class="form-text">Separate multiple emails with commas</div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="cc" class="form-label">CC</label>
                                            <input type="email" 
                                                   class="form-control" 
                                                   id="cc" 
                                                   name="cc"
                                                   multiple>
                                        </div>

                                        <div class="mb-3">
                                            <label for="subject" class="form-label">Subject *</label>
                                            <input type="text" 
                                                   class="form-control" 
                                                   id="subject" 
                                                   name="subject" 
                                                   value="<%= selectedEmail !== 'compose' ? 'Re: ' + email.subject : '' %>"
                                                   required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="content" class="form-label">Content *</label>
                                            <textarea class="form-control" 
                                                      id="content" 
                                                      name="content" 
                                                      rows="8" 
                                                      required
                                                      placeholder="Enter your message here..."></textarea>
                                        </div>

                                        <input type="hidden" name="from" value="admin@sineware.ca">

                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary" id="sendBtn">
                                                <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                                                üì§ Send Email
                                            </button>
                                            <a href="<%- prefix %>/<%= search || currentPage > 1 ? '?' + new URLSearchParams({search, page: currentPage}).toString() : '' %>" class="btn btn-secondary">Cancel</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top py-3 mt-5">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col text-muted">
                    <small>¬© 2025 Sineware Cloud Services ¬∑ Seshan Ravikumar</small>
                </div>
                <div class="col-auto">
                    <small class="text-muted">FE Mail Server v2.1</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Scroll to selected email in sidebar
        document.addEventListener('DOMContentLoaded', function() {
            <% if (selectedEmail !== false && selectedEmail !== undefined && selectedEmail !== "compose") { %>
                const selectedEmailItem = document.querySelector('[data-email-id="<%= selectedEmail %>"]');
                if (selectedEmailItem) {
                    setTimeout(() => {
                        selectedEmailItem.scrollIntoView({ 
                            behavior: 'smooth', 
                            block: 'center' 
                        });
                    }, 100);
                }
            <% } %>
        });

        // Refresh functionality
        function refreshPage() {
            location.reload();
        }

        // Search functionality
        document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.form.submit();
            }
        });

        // Form submission handling
        document.getElementById('composeForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const sendBtn = document.getElementById('sendBtn');
            const spinner = sendBtn.querySelector('.spinner-border');
            const form = e.target;
            
            sendBtn.disabled = true;
            spinner.classList.remove('d-none');
            
            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('‚úÖ Email sent successfully!');
                    window.location.href = '<%- prefix %>/<%= search || currentPage > 1 ? "?" + new URLSearchParams({search, page: currentPage}).toString() : "" %>';
                } else {
                    alert('‚ùå Failed to send email: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                alert('‚ùå Network error: ' + error.message);
            } finally {
                sendBtn.disabled = false;
                spinner.classList.add('d-none');
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'r':
                        e.preventDefault();
                        refreshPage();
                        break;
                    case 'n':
                        e.preventDefault();
                        window.location.href = '<%- prefix %>/compose<%= search ? "?search=" + encodeURIComponent(search) : "" %>';
                        break;
                    case 'f':
                    case '/':
                        e.preventDefault();
                        document.getElementById('searchInput')?.focus();
                        break;
                }
            }
        });
    </script>
</body>
</html>